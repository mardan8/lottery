/* caipiao.wxss */
/**index.wxss**/
.main{
  width:100%;
  height:100%;
}
.header{
 width:100%;
 height:256rpx;
 background-color:#d8d8d8;
}
.header image{
  width:100%;
  height:256rpx;
}
.scroll-bar{
width:100%;
height:70rpx;
text-align:left;
line-height:70rpx;
font-size:28rpx;
border:2rpx solid #d8d8d8;
padding-left: 25rpx;
}
.scroll-bar image{
  width:40rpx;
  height:40rpx;
  padding-bottom:15rpx;
}
.scroll{
height:70rpx;
padding-left:20rpx;
width:600rpx;
display:inline-block;
}
.zhongjiangPerson{
  color:red;
}
.giftImage,.giftImage image{
  width:100%;
  height:180rpx;
}
.lotteryType{
width:333rpx;
height:140rpx;
padding:15rpx 10rpx 25rpx 10rpx;
float:left;
position:relative;
margin-top:15rpx;
margin-right:15rpx;
background-color:#fff;
border-radius: 10rpx;
}
.icon,.type{
  float: left;
  height:120rpx;
}
.icon{
  margin-right:10rpx;
  margin-top: 20rpx;
}
.type{
  left:120rpx;
  margin-top: 27rpx;
}
.icon image{
   width:120rpx;
   height:120rpx; 
}

.lottery{
height:200rpx;
border-top:none;
padding-left: 15rpx;
}
.lotteryBox{
  background-color: #eee;
}
swiper{
display:block;
height:128px;
}
.introduce{
  position: relative;
}
.introduce image{
  width: 205rpx;
  height: 45rpx;
  position: absolute;
}
.rightText{
width:100%;
display:inline-block;
text-align:left;
line-height:50rpx;
padding-left:10rpx;
margin-bottom:5rpx;
}
.introduce text{
position:absolute;
font-size:24rpx;
display:inline-block;
width:205rpx;
height:45rpx;
top:0rpx;
line-height:45rpx;
text-align:center;
color:#fff;
}

