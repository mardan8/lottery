height:84rpx;
line-height:84rpx;
float:left;
}
.prizeTable{
background-color:#eee;
border:2rpx solid #d8d8d8;
margin:20rpx;
border-bottom:none;
font-size: 28rpx;
}
.prizeTr{
height:80rpx;
line-height:80rpx;
border-bottom:2rpx solid #d8d8d8;
}
.prizeClass,.prizeZhushu,.prizeMoney{
